<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите информацию"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/outputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputField"
            android:layout_marginBottom="16dp"
            android:text="Здесь будет отображаться информация" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/outputField"
            android:layout_marginBottom="16dp"
            android:text="Сохранить данные" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveButton"
            android:text="Удалить данные" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>